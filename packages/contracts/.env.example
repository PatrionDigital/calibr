# =============================================================================
# Calibr.xyz Contracts - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# =============================================================================
# Deployment Keys
# =============================================================================

# Deployer private key (without 0x prefix)
# Generate a new one for testnet: cast wallet new
PRIVATE_KEY=

# =============================================================================
# RPC Endpoints
# =============================================================================

# Base Mainnet
BASE_RPC_URL=https://mainnet.base.org

# Base Sepolia (Testnet)
BASE_SEPOLIA_RPC_URL=https://sepolia.base.org

# Optional: Alchemy/Infura for better reliability
# BASE_RPC_URL=https://base-mainnet.g.alchemy.com/v2/YOUR_API_KEY
# BASE_SEPOLIA_RPC_URL=https://base-sepolia.g.alchemy.com/v2/YOUR_API_KEY

# =============================================================================
# Contract Addresses (set after deployment)
# =============================================================================

# CaliberEASResolver address (set after running Deploy.s.sol)
RESOLVER_ADDRESS=

# CaliberCore address (set after running Deploy.s.sol)
CALIBER_CORE_ADDRESS=

# =============================================================================
# EAS Addresses (Base Network Predeploys - DO NOT CHANGE)
# =============================================================================

# EAS Contract (same on mainnet and testnet)
EAS_ADDRESS=0x4200000000000000000000000000000000000021

# Schema Registry (same on mainnet and testnet)
SCHEMA_REGISTRY_ADDRESS=0x4200000000000000000000000000000000000020

# =============================================================================
# Schema UIDs (set after running RegisterSchemas.s.sol)
# =============================================================================

FORECAST_SCHEMA_UID=
CALIBRATION_SCHEMA_UID=
IDENTITY_SCHEMA_UID=
SUPERFORECASTER_SCHEMA_UID=
REPUTATION_SCHEMA_UID=
PRIVATE_DATA_SCHEMA_UID=

# =============================================================================
# Etherscan Verification (Optional)
# =============================================================================

# Basescan API key for contract verification
# Get one at: https://basescan.org/myapikey
BASESCAN_API_KEY=

# =============================================================================
# Development Settings
# =============================================================================

# Fork block number for testing (optional)
FORK_BLOCK_NUMBER=

# Gas price in gwei (optional, for mainnet deployments)
GAS_PRICE_GWEI=
