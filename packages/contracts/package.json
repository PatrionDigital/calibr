{
  "name": "@calibr/contracts",
  "version": "0.1.0",
  "private": true,
  "description": "Calibr.xyz Foundry smart contracts",
  "type": "module",
  "scripts": {
    "build": "forge build",
    "test": "forge test",
    "test:gas": "forge test --gas-report",
    "lint": "solhint 'src/**/*.sol'",
    "fmt": "forge fmt",
    "fmt:check": "forge fmt --check",
    "deploy:local": "forge script script/Deploy.s.sol --rpc-url localhost --broadcast",
    "deploy:sepolia": "forge script script/Deploy.s.sol --rpc-url base-sepolia --broadcast --verify",
    "clean": "forge clean && rm -rf .turbo node_modules"
  },
  "devDependencies": {
    "solhint": "^4.1.0"
  }
}
