{
  "name": "@calibr/adapters",
  "version": "0.1.0",
  "private": true,
  "description": "Calibr.ly platform integrations (Polymarket, etc.)",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./polymarket": {
      "import": "./dist/polymarket/index.js",
      "types": "./dist/polymarket/index.d.ts"
    },
    "./sync": {
      "import": "./dist/sync/index.js",
      "types": "./dist/sync/index.d.ts"
    },
    "./matching": {
      "import": "./dist/matching/index.js",
      "types": "./dist/matching/index.d.ts"
    },
    "./cache": {
      "import": "./dist/cache/index.js",
      "types": "./dist/cache/index.d.ts"
    },
    "./feeds": {
      "import": "./dist/feeds/index.js",
      "types": "./dist/feeds/index.d.ts"
    },
    "./resolution": {
      "import": "./dist/resolution/index.js",
      "types": "./dist/resolution/index.d.ts"
    }
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist .turbo node_modules"
  },
  "dependencies": {
    "@calibr/core": "workspace:*",
    "@polymarket/clob-client": "^5.2.1",
    "redis": "^4.6.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.3.0"
  }
}
