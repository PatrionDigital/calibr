{
  "name": "@calibr/api",
  "version": "0.1.0",
  "private": true,
  "description": "Calibr.ly backend API services",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "prisma generate && tsup src/index.ts src/server.ts --format esm --dts",
    "start": "node dist/server.js",
    "lint": "eslint src --ext .ts",
    "typecheck": "prisma generate && tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist .turbo node_modules",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "sync:markets": "tsx -e \"import { polymarketSync } from './src/services/polymarket-sync'; polymarketSync.syncMarkets().then(console.log)\""
  },
  "dependencies": {
    "@calibr/core": "workspace:*",
    "@calibr/adapters": "workspace:*",
    "@hono/node-server": "^1.8.0",
    "@prisma/client": "^5.10.0",
    "hono": "^4.0.0",
    "ioredis": "^5.3.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "prisma": "^5.10.0",
    "tsup": "^8.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitest": "^1.3.0"
  }
}
